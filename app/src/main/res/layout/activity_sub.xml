<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground"
    tools:context=".SubActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="right">

        <Button
            android:id="@+id/btn_open"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="전체메뉴" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:layout_marginLeft="50sp"
            android:textSize="25sp"
            android:text="User" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:layout_marginLeft="50sp"
            android:textSize="20sp"
            android:text="님 안녕하세요." />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="180dp">

        <Button
            android:id="@+id/btn_camera"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="100sp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black" /> // 카메라기능 버튼

        <Button
            android:id="@+id/btn_search"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="60sp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black" /> // 텍스트검색 버튼

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="455dp">

        <Button
            android:id="@+id/btn_mapTrace"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_marginLeft="12sp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black" /> // 임장로그 버튼

        <Button
            android:id="@+id/btn_checkList"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_marginLeft="20sp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black" /> // 체크리스트 버튼

        <Button
            android:id="@+id/btn_note"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_marginLeft="25sp"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black" /> // 임장수첩 버튼

    </LinearLayout>

    <include layout = "@layout/activity_drawer" />


</androidx.drawerlayout.widget.DrawerLayout>


